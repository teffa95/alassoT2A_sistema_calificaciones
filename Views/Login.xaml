<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaCalificacionesMaui.LoginPage"
             Title="Login">

    <VerticalStackLayout Padding="20" Spacing="10">

        <Label Text="Usuario:" FontSize="Medium" />
        <Entry x:Name="txtUsuario" Placeholder="Ingrese su nombre de usuario" />

        <Label Text="Contraseña:" FontSize="Medium" />
        <Entry x:Name="txtPassword" Placeholder="Ingrese su contraseña" IsPassword="True" />

        <Button Text="Ingresar" Clicked="OnLoginClicked" />

        <Label x:Name="lblMensaje" FontSize="Medium" TextColor="Red" IsVisible="False" />

    </VerticalStackLayout>
</ContentPage>